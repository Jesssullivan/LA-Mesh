# =============================================================================
# LA-Mesh Environment Configuration Template
# Copy to .env and fill in your values
# NEVER commit .env - it is git-excluded
# =============================================================================

# =============================================================================
# GITHUB / GIT
# =============================================================================
# GitHub PAT with 'repo' scope (for gh CLI, GitHub Pages deploy)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitLab PAT (if mirroring to GitLab)
# GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# LA-MESH CHANNEL PSK (NEVER share digitally -- in-person only)
# =============================================================================
# These are set at community meetups and must match all devices on the network.
# Format: base64-encoded 256-bit keys
# LAMESH_PSK_PRIMARY=
# LAMESH_PSK_ADMIN=
# LAMESH_PSK_EMERGENCY=

# =============================================================================
# MESHTASTIC
# =============================================================================
# Meshtastic device serial port (auto-detected if blank)
# MESHTASTIC_PORT=/dev/ttyUSB0
# MESHTASTIC_PORT=/dev/ttyACM0

# Meshtastic API endpoint (for HTTP-connected devices)
# MESHTASTIC_HOST=http://meshtastic.local

# =============================================================================
# MESHCORE
# =============================================================================
# MeshCore companion app path
# MESHCORE_APP_PATH=/opt/meshcore

# =============================================================================
# HACKRF / SDR
# =============================================================================
# HackRF serial number (if multiple devices)
# HACKRF_SERIAL=

# PortaPack firmware path
# PORTAPACK_FW_PATH=./firmware/portapack

# =============================================================================
# MQTT (for gateway bridge)
# =============================================================================
# MQTT_HOST=localhost
# MQTT_PORT=1883
# MQTT_USER=lamesh
# MQTT_PASS=
# MQTT_TOPIC_PREFIX=msh/US/2/json/LongFast

# =============================================================================
# SMS BRIDGE (Twilio)
# =============================================================================
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# SMS allowlist (comma-separated E.164 numbers)
# SMS_ALLOWLIST=+12075551234,+12075555678

# =============================================================================
# EMAIL BRIDGE
# =============================================================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# GPG key ID for signed messages
# GPG_KEY_ID=

# =============================================================================
# FIRMWARE
# =============================================================================
# Local cache directory for downloaded firmware binaries
# FIRMWARE_CACHE_DIR=firmware/.cache

# =============================================================================
# BUILD TOOLING
# =============================================================================
# Nix: Usually auto-detected
# NIX_PATH=

# Bazel: Remote cache (optional)
# BAZEL_REMOTE_CACHE=

# =============================================================================
# GITHUB PAGES
# =============================================================================
# Custom domain for GitHub Pages (optional)
# PAGES_CNAME=mesh.example.com

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable development features
DEBUG=false
