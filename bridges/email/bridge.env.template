# LA-Mesh Email Bridge Environment Variables
# Copy to .env and fill in values. NEVER commit the .env file.

# MQTT (local Mosquitto on the Pi)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_TOPIC_INCOMING=msh/US/2/json/LongFast/+

# SMTP (outbound email)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=mesh@la-mesh.example.org
SMTP_USE_TLS=true

# Allowed recipient domains (empty = all allowed, comma-separated)
ALLOWED_DOMAINS=

# Logging
LOG_LEVEL=INFO
